<?xml version="1.0" ?>
<config>
	<sections>
		<popov_wp module="popov_wp" translate="label">
			<label>WordPress</label>
			<sort_order>300</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<tab>popov</tab>
			<groups>
				<settings translate="label">
					<label>WP Integration</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>

                        <general_heading translate="label">
                            <label>General Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </general_heading>
						<enable translate="label">
							<label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>

						<top_links_add translate="label">
							<label>Add lable to top menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
						</top_links_add>
                        <top_links_name translate="label comment">
                            <label>Label name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <top_links_add>1</top_links_add>
                            </depends>
                        </top_links_name>
                        <top_links_position translate="label comment">
                            <label>Label position</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <top_links_add>1</top_links_add>
                            </depends>
                        </top_links_position>

                        <number_posts_on_home translate="label comment">
                            <label>How many posts show on home?</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </number_posts_on_home>

					</fields>
				</settings>
			</groups>
		</popov_wp>
	</sections>
</config>
