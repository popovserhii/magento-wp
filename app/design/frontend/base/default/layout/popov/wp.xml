<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" ifconfig="popov_wp/settings/top_links_add">
                <label helper="popov_wp/getTopName" />
                <url helper="popov_wp/getSiteUrl" />
                <title helper="popov_wp/getTopName" />
                <prepare/>
                <urlParams/>
                <position helper="popov_wp/getPosition" />
                <liParams/>
                <aParams><![CDATA[target="_blank"]]></aParams>
            </action>
        </reference>
    </default>
</layout>